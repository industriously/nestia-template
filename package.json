{
  "name": "nestia-template",
  "version": "0.0.0",
  "description": "nestia를 적용한 nestjs 서버",
  "main": "build/main",
  "scripts": {
    "check": "ts-patch check",
    "prepare": "ts-patch install",
    "---------------------------------------------": "",
    "build": "rimraf build && tsc -p ./tsconfig.build.json",
    "build:api": "rimraf packages/api/lib && npm run nestia && tsc -p ./tsconfig.api.json",
    "eslint": "eslint src",
    "eslint:fix": "eslint src --fix",
    "prettier": "prettier . -c",
    "prettier:fix": "prettier . -w",
    "dev": "npm run build && NODE_ENV=development node build/main",
    "----------------------------------------------": "",
    "start": "NODE_ENV=production node build/main",
    "-----------------------------------------------": "",
    "test": "rimraf tbuild && tsc -p ./tsconfig.test.json && NODE_ENV=test node tbuild/test",
    "------------------------------------------------": "",
    "swagger": "NODE_ENV=development nestia swagger",
    "sdk": "rimraf ./src/api/functional && NODE_ENV=development nestia sdk && find ./src/api -type f -exec sed -i '' 's/\\r$//' {} \\;",
    "nestia": "npm run swagger ; npm run sdk",
    "package:publish": "npm run build:api && cd ./packages/api && npm publish",
    "-------------------------------------------------": "",
    "db:sch": "ts-node prisma",
    "db:update": "rimraf db && npm run db:sch && prisma generate && find ./db/runtime -type f -exec sed -i '' 's/\\r$//' {} \\;",
    "db:sync": "npm run db:update && prisma migrate dev",
    "db:init": "prisma migrate reset --force",
    "db:deploy": "prisma migrate deploy"
  },
  "author": "industriously",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git@github.com-industriously:industriously/nestia-template.git"
  },
  "keywords": [
    "nestjs",
    "nestia"
  ],
  "dependencies": {
    "@devts/authjs": "^0.0.16",
    "@fxts/core": "^0.15.1",
    "@nestia/core": "^1.3.0",
    "@nestjs/common": "^9.4.2",
    "@nestjs/core": "^9.4.2",
    "@nestjs/platform-express": "^9.4.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.1.3",
    "helmet": "^7.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "schemix": "^1.13.0",
    "ts-patch": "^2.1.0",
    "typia": "^4.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@nestia/e2e": "^0.3.2",
    "@nestia/sdk": "^1.3.0",
    "@prisma/client": "^4.15.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nestia": "^4.2.0",
    "prettier": "^2.8.8",
    "prisma": "^4.15.0",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
